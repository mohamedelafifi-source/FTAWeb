@page
@model IndexModel
@{
    ViewData["Title"] = "Family Tree";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h2 class="text-center mb-0">Family Tree</h2>
                </div>
                <div class="card-body text-center p-5">
                    <p class="lead mb-4">Choose an option to get started.</p>
                    <div class="d-grid gap-3">
                        <a asp-page="/CreateFamily" class="btn btn-primary btn-lg">Create a New Family</a>
                        <a asp-page="/SelectFamily" class="btn btn-outline-primary btn-lg">Update an Existing Family</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
