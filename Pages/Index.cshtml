@page
@model IndexModel
@{
    ViewData["Title"] = "Family Tree Viewer - Select File";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h2 class="text-center mb-0">Family Tree Viewer</h2>
                </div>
                <div class="card-body">
                    <form method="post" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label for="jsonFile" class="form-label">Select a Family Tree JSON File</label>
                            <input type="file" class="form-control" id="jsonFile" name="jsonFile" accept=".json" required>
                            <div class="form-text">Please select a JSON file generated by the Family Tree application.</div>
                        </div>
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-file-earmark-text"></i> View Tree
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
