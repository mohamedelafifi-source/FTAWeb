@page "{familyName}"
@model AttachmentManagementModel
@{
    ViewData["Title"] = "Attachments: " + Model.PersonName;
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-light d-flex justify-content-between align-items-center">
            <h4 class="mb-0">Attachments for @Model.PersonName</h4>
            <div>
                <a asp-page="/TreeView" asp-route-familyName="@Model.FamilyName" asp-route-fileName="@Model.FileName" class="btn btn-secondary btn-sm">Back to Tree</a>
            </div>
        </div>
        <div class="card-body">
            @if (TempData["Message"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show">@TempData["Message"]<button type="button" class="btn-close" data-bs-dismiss="alert"></button></div>
            }
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show">@TempData["Error"]<button type="button" class="btn-close" data-bs-dismiss="alert"></button></div>
            }

            <h5 class="mb-3">Add attachment</h5>
            <p class="text-muted small">Allowed: photos (jpg, png, gif, webp) and PDF.</p>
            <form method="post" enctype="multipart/form-data" asp-page-handler="Upload" asp-route-familyName="@Model.FamilyName" class="mb-4">
                <input type="hidden" name="fileName" value="@Model.FileName" />
                <input type="hidden" name="personName" value="@Model.PersonName" />
                <div class="input-group">
                    <input type="file" class="form-control" name="attachmentFile" accept=".jpg,.jpeg,.png,.gif,.webp,.pdf,image/*,application/pdf" required />
                    <button type="submit" class="btn btn-primary">Upload</button>
                </div>
            </form>

            <h5 class="mb-3">Existing attachments</h5>
            @if (Model.Attachments.Count == 0)
            {
                <p class="text-muted">No attachments yet.</p>
            }
            else
            {
                <div class="row g-3">
                    @foreach (var file in Model.Attachments)
                    {
                        <div class="col-sm-6 col-md-4 col-lg-3">
                            <div class="card h-100">
                                <div class="card-body p-2 text-center">
                                    @if (Model.IsImage(file))
                                    {
                                        <a href="@Model.ViewAttachmentUrl(file)" target="_blank" rel="noopener" class="d-block mb-2">
                                            <img src="@Model.ViewAttachmentUrl(file)" alt="@file" class="img-fluid rounded" style="max-height: 120px; object-fit: contain;" />
                                        </a>
                                    }
                                    else
                                    {
                                        <a href="@Model.ViewAttachmentUrl(file)" target="_blank" rel="noopener" class="d-block mb-2 text-decoration-none">
                                            <span class="fs-1 text-muted">ðŸ“„</span>
                                            <br /><small>PDF</small>
                                        </a>
                                    }
                                    <p class="small text-truncate mb-1" title="@file">@file</p>
                                    <form method="post" asp-page-handler="Delete" asp-route-familyName="@Model.FamilyName" class="d-inline" onsubmit="return confirm('Delete this attachment?');">
                                        <input type="hidden" name="fileName" value="@Model.FileName" />
                                        <input type="hidden" name="personName" value="@Model.PersonName" />
                                        <input type="hidden" name="attachmentFileName" value="@file" />
                                        <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </div>
</div>
