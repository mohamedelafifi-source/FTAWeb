@page "{familyName}"
@model RenameFileModel
@{
    ViewData["Title"] = "Rename File";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-light">
                    <h5 class="mb-0">Edit file name</h5>
                </div>
                <div class="card-body">
                    <p class="text-muted">Current name: <strong>@(System.IO.Path.GetFileNameWithoutExtension(Model.FileName))</strong></p>
                    <form method="post" asp-route-familyName="@Model.FamilyName">
                        <input type="hidden" asp-for="FileName" />
                        <div class="mb-3">
                            <label asp-for="NewFileName" class="form-label">New file name</label>
                            <input asp-for="NewFileName" class="form-control" placeholder="e.g. MyTree" />
                            <span asp-validation-for="NewFileName" class="text-danger"></span>
                        </div>
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">Save</button>
                            <a asp-page="/FamilyDetail" asp-route-familyName="@Model.FamilyName" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
