@page
@model CreateFamilyModel
@{
    ViewData["Title"] = "Create New Family";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h2 class="text-center mb-0">Create a New Family</h2>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="mb-3">
                            <label asp-for="FamilyName" class="form-label">Family Name</label>
                            <input asp-for="FamilyName" class="form-control" placeholder="Enter family name" autofocus />
                            <span asp-validation-for="FamilyName" class="text-danger"></span>
                        </div>
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">Create Family</button>
                            <a asp-page="/Index" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
